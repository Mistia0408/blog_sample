<div class="container">
    <h1 class="text-center">ブログ一覧</h1>
    <%= link_to "ブログの新規作成",:new_article %>
    <br><br>
    <table>
        <thead>
            <th>　タイトル　</th>
            <th>　更新日時　</th>
        </thead>
        <tbody>
            <% @articles.each do |article| %>
                <tr>
                    <td>　<%= link_to article.title,article %>　</td>
                    <td>　<%= article.created_at.strftime("%Y年%m月%d日 %H時%M分") %>　</td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>